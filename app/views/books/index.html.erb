<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class = "table-head">title</th>
      <th class = "table-head">body</th>
      <th class = "table-head"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |books| %>
      <tr>
        <span>
          <td class = "table-item"><%=  books.title %></td>
          <td class = "table-item"><%=  books.body %></td>
          <td class = "link-button"><%= link_to "Show", "/books/#{books.id}" %></td>
          <td class = "link-button"><%= link_to "Edit", "/books/#{books.id}/edit" %></td>
          <td class = "link-button"><%= link_to "Destroy", book_path(books.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </span>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Book</h1>
  <% if @book.errors.any? %>
    <% if  @book.errors.count == 1 %>
      <p>1 error prohibited this book from being saved:</p>
    <% else %>
      <P><%= @book.errors.count %> errors prohibited this book from being saved:</P>
    <% end %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>